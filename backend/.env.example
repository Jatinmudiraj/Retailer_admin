# Backend
ENV=dev
BACKEND_URL=http://localhost:9001
FRONTEND_ORIGIN=http://localhost:5173

# Database (MongoDB Atlas)
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
DATABASE_URL="mongodb+srv://USER:PASSWORD@cluster0.example.mongodb.net/?retryWrites=true&w=majority"

# Google Identity client id (OAuth Web client id)
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com"

# JWT for admin session cookie signing
JWT_SECRET="change_this_to_a_long_random_secret"
COOKIE_SECURE=0

# Admin access control
# Comma-separated allowed emails OR domains
ADMIN_EMAILS="youradmin@gmail.com"
ADMIN_DOMAINS=""

# Media storage (uploaded images)
MEDIA_DIR="./media"

# App settings
GOLD_RATE_PER_GRAM=6500

# AWS S3 (Optional if using local storage, but code references s3_service)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
AWS_REGION=ap-south-1
